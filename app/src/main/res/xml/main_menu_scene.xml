<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/statsConLay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleX="1"
            android:scaleY="1">
        </Constraint>

        <Constraint
            android:id="@+id/conLay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/statsConLay"
            app:layout_constraintBottom_toBottomOf="parent">
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/statsConLay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/conLay"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleX="0.6"
            android:scaleY="0.6">
        </Constraint>

        <Constraint
            android:id="@+id/conLay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </Constraint>
    </ConstraintSet>

    <Transition
        android:id="@+id/down"
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@id/start"
        app:duration="700">

        <OnSwipe
            app:dragDirection="dragUp"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@id/conLay" />
        <KeyFrameSet >
            <KeyPosition
                app:motionTarget="@+id/statsConLay"
                app:percentX="0.01"
                app:percentY="0.01" />
        </KeyFrameSet>
    </Transition>

    <Transition
        android:id="@+id/up"
        app:constraintSetEnd="@+id/start"
        app:constraintSetStart="@id/end"
        app:duration="700">

        <OnSwipe
            app:dragDirection="dragDown"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@id/currentDate" />
    </Transition>
</MotionScene>